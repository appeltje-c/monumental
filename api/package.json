{
  "name": "monumental-api",
  "version": "1.0.0",
  "description": "Monumental (mock) API for the 'Visualizing a Robotic Crane' assessment",
  "repository": {
    "type": "git",
    "url": "https://github.com/appeltje-c/monumental"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
